<%- include('partials/head', { title: 'Dashboard - 1°BIS(AMV)' })%>
<body class="bg-gray-100 text-gray-800 font-sans">

  <!-- Header -->
  <%- include('partials/header') %>


  <div class="flex">
    <!-- Sidebar -->

  <%- include('partials/sidebar') %>

    <!-- Main content -->
    <main class="flex-1 p-6">
      <h2 class="text-2xl font-bold mb-6">Painel de Controle</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <!-- Card Visitantes -->
        <div class="bg-white shadow-lg rounded-xl p-5 hover:shadow-2xl transition">
          <a href="/guests">
          <h3 class="text-lg font-semibold">Visitantes</h3>
          <p class="text-gray-500">Registrar e controlar a entrada e saída de visitantes.</p>
          </a>
        </div>

        <!-- Card Corpo Permanente -->
        <div class="bg-white shadow-lg rounded-xl p-5 hover:shadow-2xl transition">
          <a href="/cp">
          <h3 class="text-lg font-semibold">Corpo Permanente</h3>
          <p class="text-gray-500">Registrar e controlar a entrada e saída do corpo permanente.</p>
          </a>
        </div>

        <% if(user.role === 'admin'){ %>

        <!-- Card Usuários -->
        <div class="bg-white shadow-lg rounded-xl p-5 hover:shadow-2xl transition">
          <a href="/admin/users">
          <h3 class="text-lg font-semibold">Usuários</h3>
          <p class="text-gray-500">Gerenciar contas e permissões de acesso ao sistema.</p>
          </a>
        </div>

        <!-- Card Relatórios -->
        <div class="bg-white shadow-lg rounded-xl p-5 hover:shadow-2xl transition">
          <a href="/admin/reports">
            <h3 class="text-lg font-semibold">Relatórios</h3>
            <p class="text-gray-500">Gerar relatórios de visitantes e veículos em PDF/CSV.</p>
          </a>
        </div>
        
        <% } %>
        <div class="bg-white shadow-lg rounded-xl p-5 hover:shadow-2xl transition">
          <a href="/logout">
            <h3 class="text-lg font-semibold">Sair</h3>
            <p class="text-gray-500">Sair da conta.</p>
          </a>
        </div>
      </div>
    </main>
  </div>

  <%- include('partials/footer') %>


</body>
</html>
